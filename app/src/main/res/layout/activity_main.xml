<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/View_topo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#621D61" />


    <ImageView
        android:id="@+id/image_infinity"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignTop="@id/View_topo"
        android:layout_alignBottom="@id/View_topo"
        android:layout_marginStart="32dp"
        android:src="@drawable/icon_infinite"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/image_happy"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignTop="@id/View_topo"
        android:layout_alignBottom="@id/View_topo"
        android:layout_marginStart="180dp"
        android:src="@drawable/icon_happy"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/image_sun"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignTop="@id/View_topo"
        android:layout_alignBottom="@id/View_topo"
        android:layout_marginStart="320dp"
        android:src="@drawable/icon_sun"
        app:tint="@color/white" />



    <View
        android:id="@+id/View_meio"
        android:layout_width="200dp"
        android:layout_height="5dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="380dp"
        android:background="#621D61" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/View_topo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Olá, Paula Tejano"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/View_meio"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-58dp"
        android:layout_marginEnd="10dp"
        android:text="Riscos devem se corridos, porque o maior
        perigo é não arriscar nada!"
        android:gravity="center"/>

   <Button
        android:id="@+id/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint= "#621D61"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:text="Nova Frase"
        />


</RelativeLayout>